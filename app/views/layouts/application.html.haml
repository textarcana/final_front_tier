= render :partial => 'layouts/shared/xhtml_start_document'
%html{ strict_xhtml_attributes }
  %head
    = render :partial => 'layouts/shared/xhtml_head'
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body{ :id => page_name}
    #message
      
    = yield

    / Following YUI optimization practices: place scripts at the foot of the document
    = javascript_include_tag :defaults
    = javascript_include_tag 'vendor/nyt_article_skimmer.js'